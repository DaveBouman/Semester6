  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Attach to Node",
      "port": 9229,
      "sourceMaps": true,
      "restart": true,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/MessageService/",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "sourceMapPathOverrides": {
        "/src/*": "${workspaceRoot}/*"
      },
      "remoteRoot": "/src"
    }
  ]
}